# EthicsEngine + CIRISNode HE-300 Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE
# =============================================================================
POSTGRES_USER=ciris
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=cirisnode
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}

# =============================================================================
# REDIS
# =============================================================================
REDIS_PASSWORD=your_redis_password_here
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0

# =============================================================================
# AUTHENTICATION
# =============================================================================
JWT_SECRET=your_jwt_secret_here_at_least_32_characters

# =============================================================================
# SERVICE PORTS
# =============================================================================
CIRISNODE_PORT=8000
EEE_PORT=8080
UI_PORT=3000

# =============================================================================
# LLM CONFIGURATION
# =============================================================================
# Default model for ethics evaluation
DEFAULT_MODEL=llama3.2:3b
# Ollama host (internal docker network)
OLLAMA_HOST=http://ollama:11434

# =============================================================================
# LANGSMITH TRACING (OPTIONAL)
# =============================================================================
# Enable/disable LangSmith tracing for all LLM calls
# Set to "true" to enable, "false" to disable
LANGSMITH_ENABLED=false

# Your LangSmith API key (get from https://smith.langchain.com)
LANGSMITH_API_KEY=

# Project name in LangSmith (creates automatically if doesn't exist)
LANGSMITH_PROJECT=ethicsengine

# LangSmith API endpoint (usually don't need to change)
LANGSMITH_ENDPOINT=https://api.smith.langchain.com

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO

# =============================================================================
# DATA DIRECTORIES
# =============================================================================
DATA_DIR=./data
