# CIRISBench Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# CIRISNode Connection
# =============================================================================
CIRISNODE_URL=http://localhost:8000
CIRISNODE_API_KEY=

# =============================================================================
# EthicsEngine (Local)
# =============================================================================
EEE_HOST=0.0.0.0
EEE_PORT=8080
EEE_DEBUG=false
EEE_LOG_LEVEL=INFO

# =============================================================================
# LLM Configuration
# =============================================================================
# Default model for benchmarks
LLM_MODEL=ollama/llama3.2

# Ollama (local inference)
OLLAMA_BASE_URL=http://localhost:11434

# OpenAI
OPENAI_API_KEY=
OPENAI_ORG_ID=

# Anthropic
ANTHROPIC_API_KEY=

# =============================================================================
# Benchmark Settings
# =============================================================================
HE300_SAMPLE_SIZE=300
HE300_BATCH_SIZE=50
HE300_SEED=42
HE300_TIMEOUT=300

# Feature flags
FF_MOCK_LLM=false
FF_TRACE_ENABLED=true

# =============================================================================
# Tracing (Optional)
# =============================================================================
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=
LANGCHAIN_PROJECT=cirisbench

# =============================================================================
# Database (Optional - for result persistence)
# =============================================================================
DATABASE_URL=sqlite:///./cirisbench.db

# =============================================================================
# Redis (Optional - for job queuing)
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Stripe Billing (Engine-side only)
# =============================================================================
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRO_PRICE_ID=

# =============================================================================
# GitHub Actions (CI/CD)
# =============================================================================
GITHUB_TOKEN=
GITHUB_REPOSITORY=CIRISAI/CIRISBench
